<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.email_field :email, class: 'form-control', :placeholder => "メールアドレス" %>

      <%= link_to "(パスワードを忘れた場合)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control', :placeholder => "パスワード" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>次回から入力を省略</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>ユーザー登録がお済みでない方は <%= link_to "こちら", signup_path %></p>
  </div>
</div>
