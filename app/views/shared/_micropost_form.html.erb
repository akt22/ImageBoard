<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "今何してる？" %>
  </div>
  <%= f.submit "投稿する", class: "btn btn-primary" %>

  <span class="picture" style="margin-left: 30%;">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "filestyle", "data-input" => "false" %>
    <%= f.hidden_field :picture_cache %>
    <span>
      <%= image_tag @micropost.picture.thumb.url if @micropost.picture? %>
    </span>
  </span>
<% end %>

<script type="text/javascript">
  $(#micropost_picture).bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('画像のサイズの上限は5MBです。')
    }
  });
</script>

