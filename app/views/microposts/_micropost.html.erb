<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
  <div id="star-button">
    <% if micropost.star_user(current_user) %>
      <div><%= form_for(micropost.stars.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
        <%= image_submit_tag "star.png", class: "star" %>
      <% end %>
    <% else %>
      <div><%= form_for(micropost.stars.build) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= image_submit_tag "unstar.png", class: "star" %>
      <% end %>
    <% end %>
    <%= stars_counter(micropost) %>
    </div>
  </div>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか?" } %>
    <% end %>
  </span>
</li>
