<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="starcount">
    <% if micropost.star_user(current_user) %>
      <div id="star-button-<%= micropost.id %>"><%= render 'stars/star', micropost: micropost %></div>
    <% else %>
      <div id="star-button-<%= micropost.id %>"><%= render 'stars/unstar', micropost: micropost %></div>
    <% end %>
  </span>
  <div class="timestamp">
  <%= micropost.created_at.to_s(:human) %>
  <% if current_user?(micropost.user) %>
    <%= link_to "削除", micropost, method: :delete,
                                     data: { confirm: "本当に削除しますか?" } %></div>
  <% end %>
</li>
